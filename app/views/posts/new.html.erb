<div class="max-w-screen-lg mx-auto my-8">
  <h1 class="text-2xl font-semibold underline mb-4">New post</h1>
  <%= form_with(model: @post) do |f| %>
    <%= f.label :title %>
    <br>
    <%= f.text_field :title, class: "p-2 w-full bg-gray-50 rounded border border-gray-300 focus:ring-3 focus:ring-blue-300" %>
    <br>
    <br>
    <%= f.label :content %>
    <br>
    <%= f.rich_text_area :content, class: "p-2 w-full bg-gray-50 rounded border border-gray-300 focus:ring-3 focus:ring-blue-300" %>
    <br>
    <br>
    <%= f.submit "Create post", class: "font-sans text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-md text-sm w-full px-5 py-2.5 text-center" %>
  <% end %>
</div>