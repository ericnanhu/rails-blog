<p style="color: green"><%= notice %></p>
<div class="max-w-3xl mx-auto my-8">
  <h1 class="text-2xl font-semibold underline mb-4">User profile</h1>
  <%= gravatar_for @user %>
  <%= tag.p(@user.name, class: "text-center mt-5 font-bold text-2xl") %>
  <%= tag.p(@user.email, class: "text-center mb-5 text-sm") %>
  <div class="flex justify-between my-5">
    <%= link_to "Edit user", edit_user_path(@user), class: "font-sans text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-md text-sm px-5 py-2.5 text-center" %>
    <%= button_to "Destroy user", @user, method: :delete, class: "font-sans text-white bg-red-700 hover:bg-red-800 focus:ring-4 focus:outline-none focus:ring-red-300 font-medium rounded-md text-sm px-5 py-2.5 text-center" %>
  </div>
  <hr>
  <div>
  </div>
</div>
